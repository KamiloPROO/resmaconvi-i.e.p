<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfilItem"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:src="@drawable/logoapk" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomUsuarioReport"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:hint="Nombre usuario"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginEnd="10sp"
                    />

                <TextView
                    android:id="@+id/anioReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Fecha"
                    android:textSize="12sp"
                    android:layout_marginEnd="10sp"
                    />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/txtInformativoNomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reporte_para"
            android:textColor="@color/morado"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="monospace"

            >

        </TextView>


        <TextView
            android:id="@+id/nombrePersonaReportada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Juan Camilo Gomez"
            android:textSize="15sp"

            >

        </TextView>

        <TextView
            android:id="@+id/cursoPersonaReportada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quinto"
            android:textSize="12sp"

            >

        </TextView>
        <TextView
            android:id="@+id/periodoPersonaReportada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primer Periodo"
            android:textSize="12sp"

            >

        </TextView>

        <TextView
            android:id="@+id/tipoFaltaReportada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/situaciones_tipo_1"
            android:textSize="12sp"

            >

        </TextView>

        <TextView
            android:id="@+id/txtFaltaCometida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Falta Cometida:"
            android:textColor="@color/morado"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="monospace"

            >

        </TextView>

        <TextView
            android:id="@+id/faltaCometidaPersonaReportada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Juan Camilo Gomez"
            android:textSize="15sp"
            android:textAlignment="center"
            >

        </TextView>

        <TextView
            android:id="@+id/txtCompromiso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Compromiso:"
            android:textColor="@color/morado"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="monospace"

            >

        </TextView>

        <TextView
            android:id="@+id/compromisoPersonaReportada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Compromiso"
            android:textSize="15sp"
            android:textAlignment="center"
            >

        </TextView>

    </LinearLayout>



</androidx.cardview.widget.CardView>